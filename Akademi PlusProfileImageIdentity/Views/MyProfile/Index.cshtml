@model UserEditViewModel

@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br /><br />
    <form method="post" enctype="multipart/form-data">
        <img src="~/userimages/@Model.ImageUrl" height="100" width="100" />
        <br />
        <label>Adınız</label>
        <input type="text" class="form-control" asp-for="Name" />
        <br />
        <label>Soyadınız</label>
        <input type="text" class="form-control" asp-for="Surname" />
        <br />
        <label>Şehir</label>
        <input type="text" class="form-control" asp-for="City" />
        <br />
        <label>Email Adresi</label>
        <input type="text" class="form-control" asp-for="Email" />
        <br />
        <label>Kullanıcı Adınız</label>
        <input type="text" class="form-control" asp-for="Username" />
        <br />
        <label>Image Url</label>
        <input type="file" asp-for="ImageFile" />
        <br />
        <label>Telefon Numarası</label>
        <input type="text" class="form-control" asp-for="PhoneNumber" />
        <br />
        <label>Şifreniz</label>
        <input type="text" class="form-control" asp-for="Password" />
        <br />
        <button class=" btn btn-success">Bilgileri Güncelle</button>
    </form>
</div>